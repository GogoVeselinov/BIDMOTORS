<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Project</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
        integrity="sha512-Fo3rlrZj/k7ujTnHq6O5OVwOB1p5MNp1gXQZ4e5c5k5Y5Q5l5Q5l5Q5l5Q5l5Q==" crossorigin="anonymous"
        referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/layouts/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/Project.styles.css" asp-append-version="true" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg main-nav">
            <div class="container-fluid nav-container">

                <!-- LEFT: LOGO -->
                <a class="nav-logo" asp-controller="Home" asp-action="Index">
                    BIDMOTORS
                </a>

                <!-- HAMBURGER FOR MOBILE -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                    aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- CENTER + RIGHT -->
                <div class="collapse navbar-collapse justify-content-between" id="mainNavbar">

                    <!-- CENTER NAV LINKS -->
                    <ul class="navbar-nav mx-auto nav-links">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Начало</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="PartsPublic" asp-action="Index">Части</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="ServiceRequests" asp-action="Create">Заявка за
                                услуга</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">За нас</a>
                        </li>
                    </ul>

                    <!-- RIGHT: LOGIN / USER MENU -->
                    <ul class="navbar-nav nav-auth">

                        @if (Context.Session.GetString("UserId") != null)
                        {
                            <!-- Bootstrap dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle nav-user-dropdown" href="#" id="userDropdown"
                                    role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @Context.Session.GetString("UserName")
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Home" asp-action="Profile">
                                            Моят профил
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="ServiceRequests" asp-action="MyRequests">
                                            Моите заявки
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">
                                            Изход
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown notification-wrapper">

                                <a class="nav-link dropdown-toggle notification-bell" href="#" id="notifDropdown"
                                    role="button" data-bs-toggle="dropdown" aria-expanded="false">

                                    <i class="bi bi-bell"></i>

                                    <span id="notifCounter" class="notif-count d-none">0</span>
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end notif-dropdown" aria-labelledby="notifDropdown">
                                    <li class="dropdown-header text-white">Известия</li>

                                    <div id="notifList" class="notif-items">
                                        <p class="text-center text-white small p-2">Няма известия</p>
                                    </div>

                                    <li>
                                        <hr class="dropdown-divider" />
                                    </li>

                                    <li>
                                        <a class="dropdown-item text-center" asp-controller="Notifications"
                                            asp-action="All">
                                            Виж всички
                                        </a>
                                    </li>
                                </ul>

                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link nav-login-btn" asp-controller="Account" asp-action="Login">
                                    Вход
                                </a>
                            </li>
                        }

                    </ul>

                </div>
            </div>
        </nav>
    </header>


    <!-- Notifications -->
    @await Html.PartialAsync("_NotificationPartial")

    <main class="content-wrapper">
        @RenderBody()
    </main>

    <footer class="footer">
        @await Html.PartialAsync("_FooterPartial")
    </footer>

    @RenderSection("Scripts", required: false)

    <script>
        // Зареждане на броя непрочетени известия при стартиране
        @if (Context.Session.GetString("UserId") != null)
        {
            <text>
            document.addEventListener('DOMContentLoaded', function() {
                loadNotificationCount();
                loadRecentNotifications();
                
                // Refresh every 30 seconds
                setInterval(loadNotificationCount, 30000);
                setInterval(loadRecentNotifications, 30000);

                // Маркирай известията като прочетени когато се отвори dropdown-а
                const notifDropdown = document.getElementById('notifDropdown');
                if (notifDropdown) {
                    notifDropdown.addEventListener('show.bs.dropdown', function() {
                        markNotificationsAsRead();
                    });
                }
            });

            function loadNotificationCount() {
                fetch('/Notifications/GetUnreadCount')
                    .then(response => response.json())
                    .then(data => {
                        const counter = document.getElementById('notifCounter');
                        if (data.count > 0) {
                            counter.innerText = data.count;
                            counter.classList.remove('d-none');
                            console.log('[Notifications] Unread count:', data.count);
                        } else {
                            counter.classList.add('d-none');
                        }
                    })
                    .catch(err => console.error('Error loading notification count:', err));
            }

            function loadRecentNotifications() {
                fetch('/Notifications/GetRecent')
                    .then(response => response.json())
                    .then(data => {
                        const list = document.getElementById('notifList');
                        if (data.notifications && data.notifications.length > 0) {
                            list.innerHTML = '';
                            data.notifications.forEach(notif => {
                                const item = document.createElement('a');
                                item.classList.add('dropdown-item', 'notif-item');
                                if (!notif.isRead) {
                                    item.classList.add('unread');
                                }
                                item.href = '/Notifications/All';
                                item.innerHTML = `
                                    <div class="d-flex flex-column">
                                        <small class="text-muted">${notif.createdOn}</small>
                                        <span>${notif.message}</span>
                                    </div>
                                `;
                                list.appendChild(item);
                            });
                        } else {
                            list.innerHTML = '<p class="text-center text-white small p-2">Няма известия</p>';
                        }
                    })
                    .catch(err => console.error('Error loading notifications:', err));
            }

            function markNotificationsAsRead() {
                fetch('/Notifications/MarkAsRead', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        console.log('[Notifications] Marked', data.count, 'notifications as read');
                        // Обнови брояча след 500ms
                        setTimeout(() => {
                            loadNotificationCount();
                            loadRecentNotifications();
                        }, 500);
                    }
                })
                .catch(err => console.error('Error marking notifications as read:', err));
            }
            </text>
        }

        // SignalR connection за real-time известия
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/notifyHub")
            .build();

        connection.on("ReceiveNotification", function (message) {
            // 1) Update counter
            loadNotificationCount();
            loadRecentNotifications();

            // 2) Optional toast popup
            if (typeof showToast === 'function') {
                showToast(message);
            }
        });

        connection.start().catch(err => console.error('SignalR connection error:', err));
    </script>
</body>

</html>
@{
    ViewData["Title"] = "Начало";
    Layout = "_Layout";
}

@await Html.PartialAsync("Partials/_Hero")

<style>
    /* HERO SECTION - Responsive & Scalable */
    .hero-section {
        position: relative;
        min-height: clamp(500px, 90vh, 1000px);
        background: url('/img/hero.jpg') center center/cover no-repeat;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: clamp(40px, 8vw, 80px) clamp(20px, 5vw, 100px);
        color: white;
        gap: clamp(30px, 5vw, 60px);
    }

    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.55);
        z-index: 1;
    }

    .hero-left,
    .hero-right {
        position: relative;
        z-index: 2;
    }

    /* LEFT SIDE - Flexible Content */
    .hero-left {
        flex: 1 1 auto;
        max-width: 600px;
        min-width: 280px;
    }

    .hero-left h1 {
        font-size: clamp(28px, 5vw, 48px);
        font-weight: 700;
        margin-bottom: clamp(15px, 2vw, 20px);
        line-height: 1.2;
    }

    .hero-left p {
        font-size: clamp(16px, 1.8vw, 18px);
        line-height: 1.6;
        margin-bottom: clamp(20px, 3vw, 30px);
        opacity: 0.9;
    }

    .hero-cta {
        display: inline-block;
        background: var(--yellow);
        color: var(--black);
        padding: clamp(12px, 1.5vw, 14px) clamp(24px, 3vw, 32px);
        font-size: clamp(16px, 1.8vw, 18px);
        font-weight: bold;
        text-decoration: none;
        border-radius: 6px;
        transition: all .25s ease;
        border: 2px solid var(--yellow);
    }

    .hero-cta:hover {
        background: var(--black);
        color: var(--yellow);
        border-color: var(--yellow);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(255, 195, 0, 0.3);
    }

    /* RIGHT FORM - Responsive */
    .hero-right {
        flex: 0 0 auto;
        width: 100%;
        max-width: clamp(320px, 45vw, 480px);
        min-width: 280px;
    }

    .hero-form-wrapper {
        background: rgba(28, 28, 30, 0.93);
        padding: clamp(20px, 3vw, 30px);
        border-radius: 10px;
        border: 2px solid var(--yellow);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(5px);
    }

    .hero-form-wrapper h3 {
        margin-bottom: clamp(15px, 2vw, 18px);
        color: var(--yellow);
        text-align: center;
        font-size: clamp(20px, 2.5vw, 24px);
        font-weight: 600;
    }

    .form-group {
        margin-bottom: clamp(12px, 1.5vw, 14px);
    }

    .form-group label {
        font-size: clamp(13px, 1.5vw, 14px);
        margin-bottom: 6px;
        display: block;
        font-weight: 500;
    }

    .form-group input,
    .form-group select,
    .form-group textarea {
        width: 100%;
        padding: clamp(10px, 1.2vw, 12px);
        background: #2c2c2e;
        border: 1px solid #444;
        border-radius: 5px;
        color: white;
        font-size: clamp(14px, 1.5vw, 15px);
        transition: border-color 0.2s ease, background 0.2s ease;
    }

    .form-group input:focus,
    .form-group select:focus,
    .form-group textarea:focus {
        outline: none;
        border-color: var(--yellow);
        background: #3a3a3c;
    }

    .form-group select {
        cursor: pointer;
    }

    .hero-submit {
        width: 100%;
        background: var(--yellow);
        color: var(--black);
        padding: clamp(12px, 1.5vw, 14px);
        font-size: clamp(16px, 1.8vw, 17px);
        font-weight: bold;
        border: 2px solid var(--yellow);
        border-radius: 6px;
        transition: all 0.25s ease;
        cursor: pointer;
        margin-top: clamp(8px, 1vw, 10px);
    }

    .hero-submit:hover {
        background: var(--black);
        color: var(--yellow);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(255, 195, 0, 0.4);
    }

    .hero-submit:active {
        transform: translateY(0);
    }

    .hero-error {
        display: none;
        background: var(--red);
        color: white;
        padding: clamp(10px, 1.2vw, 12px);
        border-radius: 6px;
        margin-bottom: 12px;
        font-size: clamp(13px, 1.4vw, 14px);
        text-align: center;
    }

    .input-error {
        border: 1px solid var(--red) !important;
        animation: shake 0.3s ease;
    }

    @@keyframes shake {
        0%, 100% { transform: translateX(0); }
        25% { transform: translateX(-5px); }
        75% { transform: translateX(5px); }
    }

    /* Tablet Responsive - 992px and below */
    @@media (max-width: 992px) {
        .hero-section {
            flex-direction: column;
            justify-content: center;
            min-height: auto;
            padding: clamp(60px, 10vw, 100px) clamp(20px, 4vw, 40px);
            text-align: center;
        }

        .hero-left {
            max-width: 100%;
            margin-bottom: clamp(30px, 5vw, 40px);
        }

        .hero-right {
            max-width: 520px;
            width: 100%;
        }

        .hero-cta {
            width: auto;
            min-width: 200px;
        }
    }

    /* Mobile Responsive - 768px and below */
    @@media (max-width: 768px) {
        .hero-section {
            padding: clamp(40px, 8vw, 60px) clamp(15px, 4vw, 25px);
        }

        .hero-right {
            max-width: 100%;
        }

        .hero-form-wrapper {
            padding: clamp(18px, 4vw, 25px);
        }

        .form-group {
            margin-bottom: 12px;
        }
    }

    /* Small Mobile - 480px and below */
    @@media (max-width: 480px) {
        .hero-section {
            padding: 30px 15px;
            min-height: auto;
        }

        .hero-left h1 {
            font-size: 24px;
        }

        .hero-left p {
            font-size: 15px;
        }

        .hero-cta {
            width: 100%;
            padding: 12px 20px;
            font-size: 16px;
        }

        .hero-form-wrapper {
            padding: 20px 15px;
            border-width: 1px;
        }

        .hero-form-wrapper h3 {
            font-size: 18px;
        }

        .form-group input,
        .form-group select {
            padding: 10px;
            font-size: 14px;
        }

        .hero-submit {
            padding: 12px;
            font-size: 16px;
        }
    }

    /* Large Screens - Better spacing */
    @@media (min-width: 1600px) {
        .hero-section {
            padding: 80px 120px;
        }

        .hero-left {
            max-width: 700px;
        }

        .hero-right {
            max-width: 500px;
        }
    }
</style>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const form = document.getElementById("heroRequestForm");
            const errorBox = document.getElementById("hero-error");

            form.addEventListener("submit", function (e) {
                let isValid = true;
                errorBox.style.display = "none";
                errorBox.innerHTML = "";

                // Изчистваме старите грешки
                form.querySelectorAll(".input-error").forEach(el => el.classList.remove("input-error"));

                const name = form.querySelector("input[name='Name']");
                const phone = form.querySelector("input[name='Phone']");
                const service = form.querySelector("select[name='ServiceType']");

                // Validation правила
                if (name.value.trim() === "") {
                    isValid = false;
                    name.classList.add("input-error");
                }

                if (phone.value.trim() === "") {
                    isValid = false;
                    phone.classList.add("input-error");
                }

                if (service.value.trim() === "") {
                    isValid = false;
                    service.classList.add("input-error");
                }

                if (!isValid) {
                    e.preventDefault(); // спира изпращането
                    errorBox.innerHTML = "Моля, попълнете всички задължителни полета!";
                    errorBox.style.display = "block";
                }
            });
        });
    </script>
}
    }

    .brands-grid {
        display: grid;
        grid-template-columns: repeat(8, 1fr);
        gap: clamp(15px, 2vw, 25px);
        max-width: 1400px;
        margin: 0 auto;
    }

    .brand-card {
        aspect-ratio: 1;
        background: rgba(28, 28, 28, 0.8);
        border: 2px solid #333;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        cursor: pointer;
    }

    .brand-card::before {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, transparent 0%, rgba(255, 195, 0, 0.05) 100%);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .brand-card:hover {
        transform: translateY(-5px);
        border-color: var(--yellow);
        box-shadow: 0 8px 25px rgba(255, 195, 0, 0.3);
        background: rgba(28, 28, 28, 1);
    }

    .brand-card:hover::before {
        opacity: 1;
    }

    .brand-card img {
        width: 70%;
        height: 70%;
        object-fit: contain;
        filter: brightness(0) invert(1);
        opacity: 0.8;
        transition: all 0.3s ease;
        z-index: 1;
